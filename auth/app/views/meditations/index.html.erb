<p id="notice"><%= notice %></p>
<script type="text/javascript">
  sweetAlert("Assign students a grade then submit!");
</script>
<h1>Meditation Log</h1>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |meditation| %>
      <tr>
        <td><%= meditation %></td>
        <td><%= link_to 'pass', alert: "student passed" %></td>
        <td><%= link_to 'fail', alert: "student failed"%></td>
        <td><%= link_to 'other', meditation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Submit Log', new_meditation_path %>
